{
  "compilerOptions": {

    // Module Resolution
    "module": "nodenext",
    "moduleResolution": "nodenext",

    // Target
    "target": "ES2022",
    "lib": ["ES2023"],

    // Output
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Type Safety
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // ESM / Modern JS
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",

    // Interop (safe with verbatimModuleSyntax)
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // JSX
    "jsx": "react-jsx",

    // Types
    "types": ["node"],

    // Skip checking node_modules
    "skipLibCheck": true
  },
  "include": ["src"]
}